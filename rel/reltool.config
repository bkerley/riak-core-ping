{sys, [
       {lib_dirs, ["../apps/", "../deps/"]},
       {rel, "pingapp", "1",
        [
         kernel,
         stdlib,
         sasl,
         pingapp
        ]},
       {rel, "start_clean", "",
        [
         kernel,
         stdlib
        ]},
       {boot_rel, "pingapp"},
       {profile, embedded},
       {excl_sys_filters, ["^bin/.*",
                           "^erts.*/bin/(dialyzer|typer)"]},
       {excl_archive_filters, [".*"]},
       {app, sasl, [{incl_cond, include}]},
       {app, pingapp, [{incl_cond, include}]}
      ]}.

{target_dir, "pingapp"}.

{overlay_vars, "vars.config"}.

{overlay, [
           {mkdir, "data/ring"},
           {mkdir, "log/sasl"},
           {copy, "files/erl", "\{\{erts_vsn\}\}/bin/erl"},
           {copy, "files/nodetool", "\{\{erts_vsn\}\}/bin/nodetool"},
           {template, "files/app.config", "etc/app.config"},
           {template, "files/vm.args", "etc/vm.args"},
           {template, "files/pingapp", "bin/pingapp"},
           {template, "files/pingapp-admin", "bin/pingapp-admin"}
           ]}.
